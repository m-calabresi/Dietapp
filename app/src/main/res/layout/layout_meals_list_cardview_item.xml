<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:tag="cards main container">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/daily_meal_card_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/meal_date_text_view"
                style="@style/AppTheme.TitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/meal_lunch_text"
                style="@style/AppTheme.SubtitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/text_lunch"
                card_view:layout_constraintStart_toStartOf="@+id/meal_date_text_view"
                card_view:layout_constraintTop_toBottomOf="@+id/meal_date_text_view" />

            <TextView
                android:id="@+id/meal_lunch_list"
                style="@style/AppTheme.ListTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                card_view:layout_constraintStart_toStartOf="@+id/meal_date_text_view"
                card_view:layout_constraintTop_toBottomOf="@+id/meal_lunch_text" />

            <TextView
                android:id="@+id/meal_dinner_text"
                style="@style/AppTheme.SubtitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="@string/text_dinner"
                card_view:layout_constraintStart_toStartOf="@+id/meal_date_text_view"
                card_view:layout_constraintTop_toBottomOf="@+id/meal_lunch_list" />

            <TextView
                android:id="@+id/meal_dinner_list"
                style="@style/AppTheme.ListTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="32dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.0"
                card_view:layout_constraintStart_toStartOf="@+id/meal_date_text_view"
                card_view:layout_constraintTop_toBottomOf="@+id/meal_dinner_text" />

            <Button
                android:id="@+id/meal_edit_button"
                style="@style/AppTheme.BorderlessButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="@string/action_edit"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
